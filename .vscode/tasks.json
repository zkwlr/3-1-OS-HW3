{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: Build and debug g++ active files",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${file}", //현재 파일만 컴파일
                // 현재 코드 폴더 안의 모든 .cpp link and compile
                // "${fileDirname}/*.cpp", // Adjust the path to match your source files
                // "${fileDirname}/testSingleCycleCPU.cpp",
                // "${fileDirname}/SingleCycleCPU.cpp",
                // "${fileDirname}/Memory.cpp",
                // "${fileDirname}/RegisterFile.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler: /usr/bin/g++"
        }
    ]
}